@model WDMS.Application.DTOs.AdminRequest
@{
    ViewData["Title"] = "Edit Admin";
}

<div class="container mt-3">
    <div class="page-header d-flex align-items-center mb-3">
        <h2 class="mb-0">Edit Admin</h2>
        <a asp-action="List" class="btn btn-outline-secondary btn-sm ms-auto">Back to Admins</a>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Edit" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AdminId" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Password" class="form-label">New Password</label>
                        <div class="position-relative">
                            <input asp-for="Password" type="password" class="form-control pe-5" id="Password" />
                            <button type="button" id="togglePassword" class="password-toggle" aria-label="Show password" aria-pressed="false">

                                <svg id="iconEye" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                     fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                                </svg>
 
                                <svg id="iconEyeSlash" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                     fill="currentColor" class="bi bi-eye-slash-fill d-none" viewBox="0 0 16 16">
                                    <path d="m10.79 12.912-1.614-1.615a3.5 3.5 0 0 1-4.474-4.474l-2.06-2.06C.938 6.278 0 8 0 8s3 5.5 8 5.5a7 7 0 0 0 2.79-.588M5.21 3.088A7 7 0 0 1 8 2.5c5 0 8 5.5 8 5.5s-.939 1.721-2.641 3.238l-2.062-2.062a3.5 3.5 0 0 0-4.474-4.474z" />
                                    <path d="M5.525 7.646a2.5 2.5 0 0 0 2.829 2.829zm4.95.708-2.829-2.83a2.5 2.5 0 0 1 2.829 2.829zm3.171 6-12-12 .708-.708 12 12z" />
                                </svg>
                            </button>
                        </div>
           
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="AccessLevel" class="form-label">Access Level</label>
                        <select asp-for="AccessLevel" class="form-select"
                                asp-items="Html.GetEnumSelectList<WDMS.Domain.Enums.AccessLevel>()">
                            <option value="">-- Select Access Level --</option>
                        </select>
                        <span asp-validation-for="AccessLevel" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const input = document.getElementById('Password');
            const btn = document.getElementById('togglePassword');
            const eye = document.getElementById('iconEye');
            const eyeSlash = document.getElementById('iconEyeSlash');
            if (!input || !btn || !eye || !eyeSlash) return;

            btn.addEventListener('click', function () {
                const showing = input.type === 'text';
                input.type = showing ? 'password' : 'text';

                eye.classList.toggle('d-none', !showing);
                eyeSlash.classList.toggle('d-none', showing);

                this.setAttribute('aria-pressed', (!showing).toString());
                this.setAttribute('aria-label', showing ? 'Show password' : 'Hide password');
            });
        })();
    </script>
}
